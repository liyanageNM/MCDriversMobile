<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mcdriversmobile.MainActivity">

<LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are you collecting today?"
        android:paddingStart="70dp"/>

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal"
           android:orientation="vertical"
           android:paddingTop="20dp"
        android:paddingBottom="20dp">
           <CheckBox
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/polythene"
               android:text="Polythene"
               android:paddingTop="20dp"
               android:paddingBottom="20dp"/>
           <CheckBox
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/plastic"
               android:text="Plastic"
               android:paddingTop="20dp"
               android:paddingBottom="20dp"/>
           <CheckBox
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/foodWaste"
               android:text="Food waste"
               android:paddingTop="20dp"
               android:paddingBottom="20dp"/>
           <CheckBox
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/paper"
               android:text="Paper"
               android:paddingTop="20dp"
               android:paddingBottom="20dp"/>
           <CheckBox
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/cardboard"
               android:text="Cardboard"
               android:paddingTop="20dp"
               android:paddingBottom="20dp"/>
           <CheckBox
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/other"
               android:text="Other"
               android:paddingTop="20dp"
               android:paddingBottom="20dp"/>
       </LinearLayout>
       <Button
           android:id="@+id/routeButton"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Start Trip"
           android:background="#1ec353"
           android:textColor="#000"
           android:textSize="30dp" />
   </LinearLayout>

</LinearLayout>
